{
  "boot": {
    "efi": {
      "store": "$CONFIG/efi"
    }
  },
  "identifier": "$CONFIG/machine",
  "resources": {
    "cpus": 4,
    "memory": 8192
  },
  "serial": "none",
  "disks": [
    {
      "mode": "block",
      "path": "$CONFIG/alpine.iso"
    },
    {
      "mode": "block",
      "path": "$CONFIG/apkovl.img"
    },
    {
      "mode": "nvme",
      "path": "$CONFIG/data.img"
    }
  ],
  "env": {
    "CONFIG": "~/Library/VM"
  },
  "shares": {
    "~/Downloads": {},
    "~/Workspace": {}
  },
  "networks": [
    {
      "mac": "5e:49:6b:f7:7f:84",
      "mode": "nat"
    }
  ]
}
