[core]
    autocrlf = input
[diff]
    colorMoved = default
[grep]
    lineNumber = true
[log]
    date = iso-strict
[pull]
    rebase = false
[push]
    default = simple
[status]
    short = true
    branch = true
    showStash = true
    showUntrackedFiles = all
[help]
    format = man
[merge]
    conflictstyle = diff3
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    light = false
    features = decorations
    keep-plus-minus-markers = true
    line-numbers = true
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
