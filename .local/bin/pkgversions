#!/bin/sh -e
PKGS_CACHE="$HOME/.cache/pkgversions"
mkdir -p "$PKGS_CACHE"
RUN="$PKGS_CACHE/run"
FORCE=0
RAN=0

while getopts "f" opt ; do
  case $opt in
    f) FORCE=1;;
    *)
      echo "unknown arg $opt"
      exit 1
      ;;
  esac
done

if [ "$FORCE" -eq 0 ] && [ -e "$RUN" ]; then
  if [ "$(find "$RUN" -type f -mmin -60 | wc -l)" -gt 0 ]; then
    echo "recent update check completed..."
    exit 0
  fi
fi

_store() {
  name=$(echo "$1" | tr -cd "[:alnum:]._-")
  vers=$(echo "$2" | tr -cd "[:alnum:]._-")
  hashed="$(echo "$1 -> $2" | sha256sum | cut -c 1-7)"
  file="$PKGS_CACHE/$name.$vers.$hashed"
  if [ -e "$file" ]; then
    return
  fi
  echo "$1 -> $2"
  printf "  processed? (y/N) "
  read yesno
  case "$yesno" in
    "Y" | "y")
      echo "$1 $2" > "$file"
      return
      ;;
  esac
  RAN=1
}

_header() {
  echo "processing: $1" >&2
}

_version() {
  _header "$1"
  git-feed -url "$1"
}

check_version() {
  FOUND=0
  BASE=$(basename "$1")
  FILTER="$2"
  for vers in $(_version "$1" | grep -E "$FILTER"); do
    FOUND=1
    _store "$BASE" "$vers"
  done
  if [ -z "$FILTER" ] && [ "$FOUND" -eq 0 ]; then
    echo "no versions found"
    exit 1
  fi
}

source "$HOME/.config/dotfiles/packages"
[ "$RAN" -eq 0 ] && touch "$RUN"
