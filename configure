#!/bin/bash
dotfiles() {
  SHELL_NAME="$(basename "$SHELL")"
  {
    echo "#!/usr/bin/env $SHELL_NAME"
    echo "# do NOT edit, auto-generated"
    echo "source \"$HOME/.config/dotfiles/shell\""
    echo "source \"$HOME/.config/dotfiles/$SHELL_NAME\""
  } > "$HOME/.${SHELL_NAME}rc"

  echo ".config/dotfiles/shell"
  echo ".config/dotfiles/${SHELL_NAME}"
  echo ".ssh/"
  if command -v go >/dev/null; then
    echo ".local/bin/go-mod-updates"
    echo ".local/bin/go-lint"
  fi
  case "$DOTFILES_EDITOR" in
    "hx")
      echo ".config/helix/"
      ;;
    "nvim")
      echo ".config/nvim"
      ;;
    "vim")
      echo ".vimrc"
      echo ".vim"
      ;;
    *)
      ;;
  esac
  echo ".config/pkgv/"
  echo ".config/kitty/"
  echo ".local/bin/file-uploader"
  echo ".config/git/"
}

DIR=""
SET=""
FILE=""
[ -e "dotfiles.env" ] && source "dotfiles.env"
for SET in $(dotfiles | sort -u); do
  while IFS= read -r -d '' FILE; do
    echo "${FILE//$HOME/}"
    DIR=$(dirname "$FILE")
    [ "$DIR" != "." ] && mkdir -p "$HOME/$DIR"
    CMD="ln -sf"
    $CMD "$PWD/$FILE" "$HOME/$FILE"
  done < <(find "$SET" -type f -print0)
done
