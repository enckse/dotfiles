#!/bin/bash
_install() {
  case "$(basename "$SHELL")" in
    "zsh")
      echo ".zshrc"
      ;;
  esac

  echo ".config/git/"
  echo ".ssh/"
  case $(uname) in
    "Darwin")
      echo ".config/helix/"
      echo ".config/efm-langserver/"
      echo ".config/pkgversions/"
      echo ".config/kitty/"
      echo ".config/vfu/"
      ;;
  esac
}

DIR=""
SET=""
FILE=""
for SET in $(_install | sort -u); do
  while IFS= read -r -d '' FILE; do
    echo "${FILE//$HOME/}"
    DIR=$(dirname "$FILE")
    [ "$DIR" != "." ] && mkdir -p "$HOME/$DIR"
    CMD="ln -sf"
    $CMD "$PWD/$FILE" "$HOME/$FILE"
  done < <(find "$SET" -type f -print0)
done

unset SET DIR FILE DRYRUN
