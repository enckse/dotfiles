#!/bin/bash
_install() {
  SHELL_NAME="$(basename "$SHELL")"
  {
    echo "#!/usr/bin/env $SHELL_NAME"
    echo "# do NOT edit, auto-generated"
    echo "source \"$HOME/.config/dotfiles/shell\""
    echo "source \"$HOME/.config/dotfiles/$SHELL_NAME\""
  } > "$HOME/.${SHELL_NAME}rc"

  echo ".config/dotfiles/"
  echo ".ssh/"
  case "$DOTFILES_EDITOR" in
    "hx")
      echo ".config/helix/"
      ;;
    "vim" | "nvim")
      echo ".config/$DOTFILES_EDITOR"
      ;;
    *)
      ;;
  esac
  case $(uname) in
    "Darwin")
      echo ".config/kitty/"
      ;;
    "Linux")
      echo ".config/git/"
      echo ".config/gu/"
      ;;
  esac
}

DIR=""
SET=""
FILE=""
for SET in $(_install | sort -u); do
  while IFS= read -r -d '' FILE; do
    echo "${FILE//$HOME/}"
    DIR=$(dirname "$FILE")
    [ "$DIR" != "." ] && mkdir -p "$HOME/$DIR"
    CMD="ln -sf"
    $CMD "$PWD/$FILE" "$HOME/$FILE"
  done < <(find "$SET" -type f -print0)
done
