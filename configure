#!/bin/bash
dotfiles() {
  SHELL_NAME="$(basename "$SHELL")"
  echo ".${SHELL_NAME}rc"
  echo ".config/ttypty/shell"
  echo ".config/ttypty/completions"
  echo ".gitconfig"
  command -v kitty > /dev/null && echo ".config/kitty"
  command -v lb > /dev/null && echo ".config/lockbox/config.toml"
  NEED_DEV=0
  case "$(uname)" in
    "Darwin")
      command -v devcontainer > /dev/null && echo ".config/devcontainer"
      [ -d "/Applications/SwiftBar.app" ] && echo ".config/swiftbar"
      ;;
    "Linux")
      NEED_DEV=1
      ;;
  esac
  if [ "$NEED_DEV" -eq 1 ]; then
    case "$EDITOR" in
      "vim")
        echo ".config/vim/"
        command -v devtools > /dev/null && echo ".config/ttypty/vim.devtools.sh" 
        ;;
    esac
    command -v go > /dev/null && echo ".config/ttypty/go.devtools.sh"
    echo ".ssh/"
    echo ".config/git/"
  fi
}

DIR=""
SET=""
FILE=""
[ -e "dotfiles.env" ] && source "dotfiles.env"
for SET in $(dotfiles | sort -u); do
  while IFS= read -r -d '' FILE; do
    echo "${FILE//$HOME/}"
    DIR=$(dirname "$FILE")
    [ "$DIR" != "." ] && mkdir -p "$HOME/$DIR"
    CMD="ln -sf"
    $CMD "$PWD/$FILE" "$HOME/$FILE"
  done < <(find "$SET" -type f -print0)
done

VERSION="$(date +%Y%m%dT%H%M%S).$(git describe --always --dirty --abbrev=7)"
libexec() {
  echo "generating: $1"
  TO="$HOME/.local/bin/$1"
  cat libexec/lib/header.sh | sed "s/\"development\"/\"$VERSION\"/g;s/SCRIPT_NAME/$1/g" > "$TO"
  cat "libexec/bin/$1.sh" | base64 >> "$TO"
  chmod 755 "$TO"
}


ls "$HOME/.config/ttypty" | grep -q "devtools" && libexec "devtools"
case "$(uname)" in
  "Darwin")
    libexec "is-screen-locked"
    libexec "devcontainer"
    ;;
esac
libexec "git-uncommitted"
command -v go > /dev/null && libexec "go-lint" && libexec "go-mod-updates"
